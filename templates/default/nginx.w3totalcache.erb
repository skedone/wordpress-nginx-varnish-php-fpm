# BEGIN W3TC Minify cache
location ~ /var/www/<%= @node['domain'] %>/wp-content/cache/minify.*\.js$ {
    types {}
    default_type application/x-javascript;
    add_header Vary "Accept-Encoding";
}
location ~ /var/www/<%= @node['domain'] %>/wp-content/cache/minify.*\.css$ {
    types {}
    default_type text/css;
    add_header Vary "Accept-Encoding";
}
location ~ /var/www/<%= @node['domain'] %>/wp-content/cache/minify.*js\.gzip$ {
    gzip off;
    types {}
    default_type application/x-javascript;
    add_header Vary "Accept-Encoding";
    add_header Content-Encoding gzip;
}
location ~ /var/www/<%= @node['domain'] %>/wp-content/cache/minify.*css\.gzip$ {
    gzip off;
    types {}
    default_type text/css;
    add_header Vary "Accept-Encoding";
    add_header Content-Encoding gzip;
}
# END W3TC Minify cache
# BEGIN W3TC Browser Cache
gzip on;
gzip_types text/css text/x-component application/x-javascript application/javascript text/javascript text/x-js text/richtext image/svg+xml text/plain text/xsd text/xsl text/xml image/x-icon;
# END W3TC Browser Cache
# BEGIN W3TC Minify core
rewrite ^/var/www/<%= @node['domain'] %>/wp-content/cache/minify.*/w3tc_rewrite_test$ /var/www/<%= @node['domain'] %>/wp-content/plugins/w3-total-cache/pub/minify.php?w3tc_rewrite_test=1 last;
set $w3tc_enc "";
if ($http_accept_encoding ~ gzip) {
    set $w3tc_enc .gzip;
}
if (-f $request_filename$w3tc_enc) {
    rewrite (.*) $1$w3tc_enc break;
}
rewrite ^/var/www/<%= @node['domain'] %>/wp-content/cache/minify/(.+/[X]+\.css)$ /var/www/<%= @node['domain'] %>/wp-content/plugins/w3-total-cache/pub/minify.php?test_file=$1 last;
rewrite ^/var/www/<%= @node['domain'] %>/wp-content/cache/minify/(.+\.(css|js))$ /var/www/<%= @node['domain'] %>/wp-content/plugins/w3-total-cache/pub/minify.php?file=$1 last;
# END W3TC Minify core